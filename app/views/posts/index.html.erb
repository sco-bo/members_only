<h1>Posts</h1>

<% if logged_in? %>
  <%= link_to "New Post", new_post_path %>
<% else %>
  <%= link_to "Sign in to view Authors", login_path %>
<% end %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Author</th>
    <th colspan="3"></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.body %></td>
      <% if logged_in? %>
      <% author = User.find_by(id: post.user_id) %>
        <td><%= author.name %></td>
      <% end %>
    </tr>

    <% end %>
</table>

